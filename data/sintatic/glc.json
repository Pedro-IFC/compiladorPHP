{
    "programa": {
        "sequencia": ["inicio", "lista_funcoes", "fim"]
    },
    "lista_funcoes": {
        "sequencia": ["funcao", "lista_funcoes"],
        "vazio": true
    },
    "funcao": {
        "sequencia": ["def", "tipo", "identificador", "ABREPAREN", "parametros", "FECHAPAREN", "ABRECHAVES", "lista_comandos", "FECHACHAVES"]
    },
    "parametros": {
        "sequencia": ["tipo", "identificador", "parametros_lista"],
        "vazio": true
    },
    "parametros_lista": {
        "sequencia": ["VIRGULA", "tipo", "identificador", "parametros_lista"],
        "vazio": true
    },
    "tipo": {
        "opcoes": ["char", "int", "float", "array"]
    },
    "lista_comandos": {
        "sequencia": ["comando", "lista_comandos"],
        "vazio": true
    },
    "comando": {
        "opcoes": [
            "declaracao_variavel",
            "atribuicao",
            "leitura",
            "impressao",
            "retorno",
            "chamada_funcao",
            "selecao",
            "repeticao"
        ]
    },
    "declaracao_variavel": {
        "sequencia": ["tipo", "identificador", "PONTOVIRGULA"]
    },
    "atribuicao": {
        "sequencia": ["identificador", "IGUAL", "expressao", "PONTOVIRGULA"]
    },
    "leitura": {
        "sequencia": ["leia", "ABREPAREN", "identificador", "FECHAPAREN", "PONTOVIRGULA"]
    },
    "impressao": {
        "sequencia": ["imprima", "ABREPAREN", "expressao", "FECHAPAREN", "PONTOVIRGULA"]
    },
    "retorno": {
        "sequencia": ["retorne", "expressao", "PONTOVIRGULA"]
    },
    "chamada_funcao": {
        "sequencia": ["identificador", "ABREPAREN", "argumentos", "FECHAPAREN", "PONTOVIRGULA"]
    },
    "argumentos": {
        "sequencia": ["expressao", "argumentos_lista"],
        "vazio": true
    },
    "argumentos_lista": {
        "sequencia": ["VIRGULA", "expressao", "argumentos_lista"],
        "vazio": true
    },
    "selecao": {
        "sequencia": ["se", "ABREPAREN", "condicao", "FECHAPAREN", "ABRECHAVES", "lista_comandos", "FECHACHAVES", "selecao_senao"]
    },
    "selecao_senao": {
        "sequencia": ["senao", "ABRECHAVES", "lista_comandos", "FECHACHAVES"],
        "vazio": true
    },
    "repeticao": {
        "opcoes": [
            {
                "sequencia": ["para", "ABREPAREN", "atribuicao", "condicao", "PONTOVIRGULA", "atribuicao", "FECHAPAREN", "ABRECHAVES", "lista_comandos", "FECHACHAVES"]
            },
            {
                "sequencia": ["enquanto", "ABREPAREN", "condicao", "FECHAPAREN", "ABRECHAVES", "lista_comandos", "FECHACHAVES"]
            }
        ]
    },
    "condicao": {
        "sequencia": ["expressao", "operador_relacional", "expressao"]
    },
    "operador_relacional": {
        "opcoes": ["==", "!=", "<", ">", "<=", ">="]
    },
    "expressao": {
        "sequencia": ["termo", "expressao_opcional"],
        "repeticao": true
    },
    "expressao_opcional": {
        "sequencia": ["operador_aritmetico", "termo", "expressao_opcional"],
        "vazio": true
    },
    "termo": {
        "sequencia": ["fator", "termo_opcional"],
        "repeticao": true
    },
    "termo_opcional": {
        "sequencia": ["operador_aritmetico", "fator", "termo_opcional"],
        "vazio": true
    },
    "fator": {
        "opcoes": ["ABREPAREN", "expressao", "FECHAPAREN", "identificador", "constante"]
    },
    "operador_aritmetico": {
        "opcoes": ["+", "-", "*", "/"]
    },
    "identificador": {
        "padrao": "[a-zA-Z_][a-zA-Z0-9_]*"
    },
    "constante": {
        "opcoes": ["n√∫mero", "caractere", "string"]
    }
}
